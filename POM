            <version>2.8.2</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.media</groupId>
            <artifactId>jersey-media-json-jackson</artifactId>
            <version>2.25</version>
        </dependency>
    </dependencies>
   
    <build>
        <!--<finalName>orangec</finalName>-->
        <plugins>
            <!-- jar plugin
            <plugin>
